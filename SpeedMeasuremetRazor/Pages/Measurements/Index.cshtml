@page
@using SpeedMeasuremetRazor.Models
@model SpeedMeasuremetRazor.Pages.Measurements.IndexModel
@{
}

<h1>List of Speed Measurements</h1>

<p>Number of registrations: @Model.repo.GetAllSpeedMeasurements().Count</p>


<a class="nav-link" asp-area="" asp-page="CreateSpeedMeasurement">Create Measurement</a>

<table class="table">
    <thead>
        <tr>
            <th>All</th>
            <th>OverSpeedLimit</th>
            <th>CutInLicense</th>
            <th>ConditionalRevocation</th>
            <th>UnconditionalRevocation</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.repo.GetAllSpeedMeasurements().Count</td>
            <td>@Model.repo.NoOfOverSpeedLimit()</td>
            <td>@Model.repo.NoOfCutInLicense()</td>
            <td>@Model.repo.NoOfConditionalRevocation()</td>
            <td>@Model.repo.NoOfUnconditionalRevocation()</td>
        </tr>
    </tbody>
</table>


<table class="table">
    <thead>
        <tr>
            <th>Measurement ID</th>
            <th>Speed Registered</th>
            <th>Time Stamp</th>
            <th>Address</th>
            <th>Zone</th>
            <th>Speed Limit</th>
            <th>Photo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (SpeedMeasurement measurement in Model.repo.GetAllSpeedMeasurements())
        {
            <tr>
                <td>@measurement.Id</td>
                <td>@measurement.Speed</td>
                <td>@measurement.TimeStamp</td>
                <td>@measurement.Location.Address</td>
                <td>@measurement.Location.Zone</td>
                <td>@measurement.Location.SpeedLimit</td>
                <td><img src="Images/@measurement.Picture" /></td>
                <td>
                    <form method="post">
                        <button class="btn btn-danger">Delete</button>
                        <input type="hidden" name="deletemeasurement" value="@measurement.Id" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
