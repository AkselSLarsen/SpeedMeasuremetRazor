@page
@using SpeedMeasuremetRazor.Models
@model SpeedMeasuremetRazor.Pages.Locations.CreateLocationModel
@{
}

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Location.Address"></label>
        <input asp-for="@Model.Location.Address" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Location.SpeedLimit"></label>
        <input asp-for="@Model.Location.SpeedLimit" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Location.Zone"></label>
        <select asp-for="@Model.Location.Zone" asp-items="Html.GetEnumSelectList<Zone>()">
            <option></option>
        </select>
    </div>
    <input type="submit" value="Create" class="btn btn-primary" />
</form>
